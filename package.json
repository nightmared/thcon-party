{
  "name": "gauben.github.io",
  "version": "1.0.0",
  "description": "Personal portfolio",
  "repository": "git@github.com:GauBen/gauben.github.io.git",
  "author": "Gautier Ben AÃ¯m <benaim.gautier@gmail.com>",
  "license": "MIT",
  "browserslist": "defaults",
  "scripts": {
    "start": "yarn build && npm-run-all --parallel watch:*",
    "watch:eleventy": "eleventy --serve --output=_pre-dist",
    "watch:parcel": "PARCEL_WORKERS=0 parcel '_pre-dist/**/*.{html,txt}' --dist-dir _dist --cache-dir _cache --no-source-maps",
    "clean": "rimraf ./_dist ./_pre-dist",
    "build": "yarn clean && yarn build:eleventy && yarn build:parcel",
    "build-github": "yarn clean && yarn build:eleventy-github && yarn build:parcel-github",
    "build:eleventy": "eleventy --output=_pre-dist",
    "build:eleventy-github": "eleventy --output=_pre-dist --pathprefix /thcon-party/",
    "build:parcel": "PARCEL_WORKERS=0 parcel build '_pre-dist/**/*.{html,txt}' --dist-dir _dist --cache-dir _cache --no-source-maps",
    "build:parcel-github": "PARCEL_WORKERS=0 parcel build '_pre-dist/**/*.{html,txt}' --dist-dir _dist --cache-dir _cache --no-source-maps --public-url /thcon-party/",
    "test": "yarn test:styl && yarn test:ts && echo ':)'",
    "test:styl": "stylelint './assets/**/*.styl' --custom-syntax stylelint-plugin-stylus/custom-syntax --fix",
    "test:ts": "eslint './assets/**/*.ts' './.eleventy.js' './pages/**/*.js' --fix",
    "preview": "yarn build && yarn serve --no-clipboard _dist"
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.0-beta.8",
    "@11ty/eleventy-navigation": "^0.3.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@parcel/transformer-image": "^2.0.1",
    "@parcel/transformer-stylus": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "rimraf": "^3.0.2",
    "serve": "^13.0.2",
    "sharp": "^0.29.1",
    "stylelint": "^14.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-plugin-stylus": "^0.13.1",
    "stylelint-rscss": "^0.4.0",
    "typescript": "^4.5.2"
  }
}
